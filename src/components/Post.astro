---

import { type CollectionEntry } from 'astro:content';

type Props = {
    post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;

function formatDate(dateString) {
  const date = new Date(dateString);
  const year = date.getFullYear();
  const month = date.toLocaleString('default', { month: 'short' });
  const day = String(date.getDate()).padStart(2, '0');
  return `${year}-${month}-${day}`;
}
---

<article>
    <a href={`/posts/${post.slug}`}>
        
        <img 
        src={post.data.image.url}
        width={600} 
        height={600/1.5} 
        alt={post.data.title} 
        class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover h-32" />
    </a>
    <a href={`/posts/${post.slug}`} class="text-2xl text-zinc-900 font-semibold inline-black">
        <h2>{post.data.title}</h2>
        <p class="text-sm">Date posted: {formatDate(post.data.pubDate)}</p>
    </a>
    <!-- <p class="text-zinc-900 text-2xl line-clamp-2">{post.body}</p> -->
        
</article>