---
// Optional: Import any components or assets you need.
let { title, url, caption, logos = '' } = Astro.props;
---

<!-- Component definition -->
<section class="bg-white">
    <div class="p-8 mx-auto" style="max-width: 1200px;">
        <h1 class="text-3xl font-bold mb-6 text-center">{title}</h1>
    
        <div class="grid grid-cols-3 gap-4">
            {logos.map(logo => (
                <div class="flex flex-col items-center">
                    <img src={logo.url} alt={logo.caption} class="w-24 h-24 object-contain" />
                    <span class="mt-2 text-center font-bold">{logo.caption}</span>
                </div>
            ))}
        </div>
    </div>
</section>

<script>
  export let title = "Default Title";
  export let logos = [];
</script>
